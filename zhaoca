<!DOCTYPE html>
<html>
	<head>
		<meta charset="utf-8" />
		<title></title>
		<script src="js/vue.js" type="text/javascript" charset="utf-8"></script>
	</head>
	<body>
		<div id="app">
			<img src="img/44.jpg" @click="show()" />
			<br />
			<br />
			你一共得了{{userNumber}}分，满分6分。鼠标点击次数{{clickNumber}}

		</div>
		<script type="text/javascript">
			let v = new Vue({
				el: '#app',
				data: {
					userNumber: 0,
					clickNumber: 0,
					flag1:0,
					flag2:0,
					flag3:0,
					flag4:0,
					flag5:0,
					flag6:0,
				},
				methods: {
					show() {
						console.log(event.clientX + "---" + event.clientY)
						if (event.clientX >= 0) {
							v.$data.clickNumber++;
							console.log("鼠标点击一次");
						}

						if (v.$data.flag1==0 && ( (event.clientX > 472 && event.clientX < 495 && event.clientY > 388 && event.clientY < 410) ||
							(event.clientX > 480 && event.clientX < 485 && event.clientY > 91 && event.clientY < 101) ) ) {
							v.$data.userNumber++;
							v.$data.flag1=1;
							alert("恭喜你！找到了1处不同之处！！！");
							return;
						}
						if (v.$data.flag2==0 && ( (event.clientX > 196 && event.clientX < 220 && event.clientY > 443 && event.clientY < 467) ||
							(event.clientX > 190 && event.clientX < 220 && event.clientY > 128 && event.clientY < 156) ) ){
							v.$data.userNumber++;
							v.$data.flag2=1;
							alert("恭喜你！找到了1处不同之处！！！");
							return;
						}
						if (v.$data.flag3==0 && ( (event.clientX > 310 && event.clientX < 329 && event.clientY > 233 && event.clientY < 244) ||
							(event.clientX > 326 && event.clientX < 334 && event.clientY > 533 && event.clientY < 543) ) ){
							v.$data.userNumber++;
							v.$data.flag3=1;
							alert("恭喜你！找到了1处不同之处！！！");
							return;
						}
						if (v.$data.flag4==0 && ( (event.clientX > 650 && event.clientX < 680 && event.clientY > 327 && event.clientY < 338) ||
							(event.clientX > 650 && event.clientX < 662 && event.clientY > 38 && event.clientY < 60) ) ){
							v.$data.userNumber++;
							v.$data.flag4=1;
							alert("恭喜你！找到了1处不同之处！！！");
							return;
						}
						if (v.$data.flag5==0 && ( (event.clientX > 374 && event.clientX < 405 && event.clientY > 170 && event.clientY < 175) ||
							(event.clientX > 376 && event.clientX < 407 && event.clientY > 467 && event.clientY < 473) ) ){
							v.$data.userNumber++;
							v.$data.flag5=1;
							alert("恭喜你！找到了1处不同之处！！！");
							return;
						}
						if (v.$data.flag6==0 && ( (event.clientX > 70 && event.clientX < 95 && event.clientY > 400 && event.clientY < 440) ||
							(event.clientX > 84 && event.clientX < 91 && event.clientY > 112 && event.clientY < 134) ) ){
							v.$data.userNumber++;
							v.$data.flag6=1;
							alert("恭喜你！找到了1处不同之处！！！");
							return;
						}
					}

				}
			})
		</script>

	</body>
